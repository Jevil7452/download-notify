{
  "manifest_version": 2,
  "name": "download-finished-notify",
  "version": "1.1",

  "description": "Creates a notification whenever a download is finished",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
      "scripts": ["download-notify.js"]
  },

  "permissions": [
      "downloads",
      "notifications"
  ]
}
